{
    "manifest_version": 3,
    "name": "Click & Scrape",
    "version": "1.0",
    "description": "Visual element selection with CSS selector generation for developers and test engineers",
    "icons": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "permissions": ["activeTab", "scripting", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_title": "Click & Scrape - Smart CSS Selector Generator",
      "default_icon": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png"
      }
    }
  }
  